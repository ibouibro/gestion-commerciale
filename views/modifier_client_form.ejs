                <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title">Modifier un client</h3>
                     </div>
                      <div class="panel-body">
                        <% if (locals?.message) { %>  
                          <div class="alert alert-success" role="alert">
                            <%= message %>  
                          </div>          
                            
                       <% }
                        if (locals?.client) { %>
                           
                        <form accept-charset="UTF-8" role="form" method="post" action="/modifier_client">
                        <fieldset>
                            <div class="form-group">
                              Nom
                                <input class="form-control" required placeholder="Nom" name="nom" type="text" value=" <%= client.nom %> "> 
                            </div>

                            <div class="form-group">
                              Prénom
                                <input class="form-control" required placeholder="Prénom" name="prenom" type="text" value=" <%= client.prenom %> ">
                            </div>
                              <div class="form-group">
                                Email
                                <input class="form-control" required placeholder="E-mail" name="email" type="email" value=" <%= client.email %> ">
                            </div>
                            <div class="form-group">
                              Téléphone
                                <input class="form-control" required placeholder="Téléphone" name="tel" id="tel" type="number" value=" <%= client.tel %> ">
                            </div>
                            <script>
                              document.getElementById("tel").value="<%= client.tel %>";
                            </script>
                            <div class="form-group">
                              Adresse
                                <input class="form-control" required placeholder="Adresse" name="adresse" type="text" value=" <%= client.adresse %> ">
                            </div>
                            <input type="hidden" name="id" value=" <%= client.id_client %> ">
                            
                            <div class="form-group">
                              Sexe
                                <select class="form-control" required  name="sexe" value=" <%= client.sexe %> ">
                                    <option value='<%= client.sexe %> '><%= client.sexe %> </option>
                                    <% 
                                    if (client.sexe == "masculin") { %>
                                    <option value="feminin">féminin</option>
                                    <% } else{ %>  
                                      <option value="masculin">masculin</option>
                                      <% } %>  
                                </select>
    
                            
                            
                            <input class="btn btn-lg btn-success btn-block" style="margin-top:15px;" type="submit" value="enregistrer la modification">
                        </fieldset>
                          </form>
                          <% } %>  
