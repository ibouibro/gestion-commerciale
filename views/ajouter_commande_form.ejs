<%- include('header') -%>

<div class="p-4 content">
   

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title">Enregistrer une commande</h3>
                     </div>
                      <div class="panel-body">
                        <% if (locals?.message) { %>
                            <div class="alert alert-success" role="alert">
                                <%= message %>  
                              </div>           
                            
                       <% } %>
                       <% if (locals?.produits && locals.produits.length != 0) { %>
                        <form accept-charset="UTF-8" role="form" method="post" action="/ajouter_commande">
                        <fieldset>
                            
                            <div class="form-group">
                                Produit
                                <select class="form-control" required  name="produit">
                                    <%  
                                        for(var i=0; i< produits.length; i++) { %>
                                    <option value='<%= produits[i].nom %>'><%= produits[i].nom %></option>
                                    
                                    <% } %>
                                    
                                </select>
                                <div>
                                    <div class="form-group" style="margin-top:20px;">
                                    <input class="form-control" required placeholder="QuantitÃ©" name="quantite" type="number" min="0" value="">
                                </div>
                                <div>
                                    <div class="form-group" style="margin-top:20px;">
                                    <input class="form-control" required placeholder="Montant" name="montant" type="number" min="0" value="">
                                </div>
            
                            <input class="btn btn-lg btn-success btn-block menu-item" style="margin-top:15px;" type="submit" value="enregistrer">
                        </fieldset>
                          </form>

                          <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
  </div>

<%- include('footer') -%>