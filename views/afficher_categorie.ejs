<%- include('header') -%>


<div class="container mt-4">
    <h1>Catégories</h1>
    <%  if (locals?.message) {  %>
      <div class="alert alert-success" role="alert">
        <%= message %>  
      </div>
  <% } 
  if (locals?.categories && locals?.categories.length != 0) {

  %>


    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>Nom</th>
        
          
        </tr>
      </thead>
      <tbody>
        <%   
        for(var i=0; i< categories.length; i++) { %>
        <tr>
          <td> <%= categories[i].id_categorie %> </td>
          <td> <%= categories[i].nom %> </td>
          
        
        
      
          <td class="table-actions">
            <%   let dlink = '/supprimer_categorie/?id='+categories[i].id_categorie;
            let dlink2 = '/modifier_categorie_form/?id='+categories[i].id_categorie;
            %>
           
            <a href="<%= dlink2 %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="<%= dlink %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr
        <% } %>
        <!-- Add more rows as needed -->
      </tbody>
    </table>
    <% }else{ %>
      Aucune catégorie trouvée
      <% } %>
  </div>
 

<%- include('footer') -%>