<%- include('header') -%>
<div class="main-content">
    <div class="">
        <div class="container" style="display:flex;justify-content:center;">
            <div class="col-lg-10">
                <div class="">
                    <div class="">
                       <h1>Créer un utilisateur</h1>
                    </div>
                    <div class="login-form">

                        <form action="/ajouter_utilisateur" method="post">

                          <% if(locals?.message){ %>
                          <%= message %>

                          <% } %>
                          <div class="form-group">
                            <label>Prénom</label>
                            <input class="au-input au-input--full" type="text" name="prenom" placeholder="Prénom" required>
                        </div>
                        <div class="form-group">
                            <label>Nom</label>
                            <input class="au-input au-input--full" type="text" name="nom" placeholder="nom" required>
                        </div>
                            <div class="form-group">
                                <label>Email Address</label>
                                <input class="au-input au-input--full" type="email" name="email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input class="au-input au-input--full" type="password" name="password" placeholder="Password" required>
                            </div>
                            
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Enregistrer</button>
                            <div class="social-login-content">
                               
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<%- include('footer') -%>